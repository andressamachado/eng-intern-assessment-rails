<% # Form partial for user login %>
<%= form_with url: sign_in_path do |form| %>

  <div class="shadow p-3 mt-5 mb-3 bg-body rounded">
    <div class="mb-3">
      <%= form.label :username %>
      <%= form.text_field :username, class: "form-control", placeholder: "username" %>
    </div>

    <div class="mb-3">
      <%= form.label :password %>
      <%= form.password_field :password, class: "form-control", placeholder: "password" %>
    </div>
  </div>

  <% # form submit button %>
  <div class="d-flex justify-content-between">
    <%= form.submit "Sign In", class: "btn btn-primary" %>
  </div>
<% end %>
