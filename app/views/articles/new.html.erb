<% unless Current.user %>
  <p>You need to have an account to perform this action.</p>
  <p>
    Please
    <%= link_to "Sign in", sign_in_path, class:"text-decoration-none link-secondary" %> if you already have an account or
    <%= link_to "Sign up", sign_up_path, class:"text-decoration-none link-secondary" %> to create an account.
  </p>

  <% else %>
    <h1>New article</h1>

    <%= render "form", article: @article %>
    <div class="d-flex justify-content-center">
      <%= link_to "Back to articles", articles_path, class:"text-decoration-none link-secondary" %>
    </div>
<% end %>
