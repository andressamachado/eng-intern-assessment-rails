<% # This partial form is used to create and update an article %>
<%= form_with(model: article) do |form| %>
  <div class="mb-3">
    <% form.label :author, style: "display: block" %> Publishing author:
    <%= form.text_field :author, class:"form-control", value: Current.user.username, disabled: true %>
  </div>

  <div class="mb-3">
    <% form.label :title, style: "display: block" %>
    <%= form.text_field :title, class:"form-control", placeholder:"Title", required: true %>
    <div id="emailHelp" class="form-text">
      Be aware an author cannot have two articles with the same title!
    </div>
  </div>

  <div class="mb-3">
    <% form.label :content, style: "display: block" %>
    <%= form.text_area :content, class:"form-control", placeholder:"Content", rows: "3" %>
  </div>

  <div class="mb-3">
    <% form.label :date, style: "display: block"%> Publishing date:
    <%= form.date_field :date, class:"form-control", value: Date.current, disabled: true%>
  </div>

  <div class="d-flex mt-5">
    <%= form.submit class:"btn btn-success flex-fill"%>
  </div>
<% end %>
